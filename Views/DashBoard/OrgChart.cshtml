@{
    ViewBag.Title = "OrgChart";
}

<h2>Organization Chart</h2>


<html>
<head>
    <script src="~/Scripts/getorgchart-1.1/getorgchart.js"></script>
    <link href="~/Scripts/getorgchart-1.1/getorgchart.css" rel="stylesheet" />
    <style type="text/css">
        html, body {
            margin: 0px;
            padding: 0px;
            width: 100%;
            height: 100px;
            overflow: visible;
        }

        #people {
            width: 100%;
            height: 300px;
        }
    </style>
    <title>

    </title>
</head>
<body>
    <div id="people"></div>
    <script type="text/ecmascript">

    var readUrl = "@Url.Action("GetorgchartData")";

    $.getJSON(readUrl, function(people) {
        $('#people').getOrgChart({
            theme: "helen",
            primaryColumns: ["EmpName", "Designation"],
            imageColumn: "image",
            linkType: "M",
            editable: false,
            dataSource: people,
            color: "blue",
            theme: "annabel",
            scale: 0.2
        });
    });
    </script>
</body>
</html>

