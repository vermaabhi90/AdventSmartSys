                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    Approval Count
                                </th>


                            </tr>
                        </thead>

                        @foreach (var item in Model.lstApprover)
                        {
                            <tbody>
                                <tr style="background-color:#f2ebe6">
                                    <td>
                                        <a href="@item.HyperLink" class="btn btn-info" style="position:relative;">
                                            <i class="glyphicon glyphicon-hand-right"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.Description)
