@model IEnumerable<SmartSys.BL.DBConnection>


@{
    ViewBag.Title = "Select Database Connection";
}

<h2> &nbsp;&nbsp;Select Datasource</h2>
<script>

</script>
<html>
<head>
    <title>WebgridSample</title>
    <script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <style type="text/css">
            .modal-content {
        width: 1050px !important;
        margin: 30px auto !important;
        left: 50%;
        transform: translateX(-50%);
    }
        .webGrid {
            margin: 4px;
            border-collapse: collapse;
            width: 1000px;
            background-color: #FCFCFC;

        }

        .header {
            background-color: #C1D4E6;
            font-weight: bold;
            color: #FFF;
        }

        .webGrid th, .webGrid td {
            border: 1px solid #C0C0C0;
            padding: 5px;
        }

        .alt {
            background-color: #E4E9F5;
            color: #000;
        }

        .gridHead a:hover {
            text-decoration: underline;
        }

        .description {
            width: auto;
        }

        .select {
            background-color: #389DF5;
        }

        .name {
            width: 500px;
        }
    </style>
</head>

<body>
    <table align-content:center">
        <tr>
            <td style="padding:10px">


                <div>
                    @{
                        var grid = new WebGrid(source: Model);
                    }
                    <div id="gridContent">

                        @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(grid.Column(columnName: "ConnectionId", header: "Connection Id"),
                grid.Column(columnName: "ConnectionType", header: "Connection Type", canSort: true, style: "width:500px"),
                grid.Column(columnName: "ServerName", header: "Server Name"),
                grid.Column(columnName: "DBName", header: "Database Name"),
                grid.Column(columnName: "Port", header: "Port"),
                grid.Column(columnName: "UserName", header: "UserName"),
                grid.Column(header: "Action", format: (item) => Html.ActionLink("Select", "SetReportDBConnection", new { ObjName = item.ObjName, ConnectionId = item.ConnectionId }))
                ))

                    </div>
                </div>
            </td>

        </tr>
       
    </table>
</body>
</html>



