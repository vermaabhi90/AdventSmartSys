@model IEnumerable<SmartSys.BL.DHFeedTrigger>

@{
    ViewBag.Title = "RDSRepotList";
}

<h2>Trigger List</h2>

<html>
<head>
    <title>WebgridSample</title>
   

    <style type="text/css">
        .webGrid {
            margin: 4px;
            border-collapse: collapse;
            width: 550px;
            background-color: #FCFCFC;
        }

        .header {
            background-color: #C1D4E6;
            font-weight: bold;
            color: #FFF;
            width: auto;
        }

        .webGrid th {
            border: 1px solid #C0C0C0;
            padding: 5px;
        }

        .webGrid td {
            border: 1px solid #C0C0C0;
            padding: 5px;
        }

        .alt {
            background-color: #E4E9F5;
            color: #000;
        }

        .gridHead a:hover {
            text-decoration: underline;
        }

        .description {
            width: auto;
        }

        .select {
            background-color: #389DF5;
        }

        .name {
            width: 400px;
        }
    </style>
</head>
<body>
    <div class="">


        <div>
            @{

            }
            @{
                var grid = new WebGrid(source: Model, canPage: true, ajaxUpdateCallback: "GridUpdate", ajaxUpdateContainerId: "grid", rowsPerPage: 10);

            }
            <div id="gridContent">
                @grid.GetHtml(tableStyle: "webGrid",
                           htmlAttributes: new { id = "grid" }, 
                         headerStyle: "webGrid-header",
                         alternatingRowStyle: "webGrid-alt",
                         selectedRowStyle: "webGrid-select",
                                  columns: grid.Columns
                  (grid.Column(columnName: "TriggerId", header: "Trigger Id"),
                 grid.Column(columnName: "TriggerName", header: "Trigger Name", canSort: true, style: "width:100px"),
                   grid.Column(header: "Action", format: (item) => Html.ActionLink("Add Trigger", "AddTriggerToEdit", "DHFeedEvtTrigg", new { TriggerId = item.TriggerId, TriggerName = item.TriggerName }, null))


                ))

            </div>
        </div>
        <div class="row">
            &nbsp;
        </div>
       

    </div>
</body>
</html>
