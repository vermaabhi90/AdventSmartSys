@using (Html.BeginForm(new { id= "Experties"}))
{
    <html>
    <body>
         <table  style="border-collapse:separate;border-spacing: 0 5px;margin-left:45px">
            @Html.HiddenFor(model => model.NewExperties)
         
            @Html.HiddenFor(model => model.EmpId, new { id = "" })
          
            <tr>
                <td>
                    <label for="Name">Experties</label>
                </td>
                <td>
                    <div class="">
                        @Html.TextBoxFor(model => model.Experties, new { @class = "form-control", id = "Experties1" })
                        @Html.ValidationMessageFor(model => model.Experties, "", new { @class = "text-danger" })
                    </div>
                </td>
               
                <td>
                    <label for="Name">Experience in Years</label>
                </td>
                <td>
                    <div class="">
                        @Html.TextBoxFor(model => model.ExpInYears, new { @class="form-control", id = "ExpInYears", @type = "number", step = "any" })
                        @Html.ValidationMessageFor(model => model.ExpInYears, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>
            
            <tr>

                <td>
                    <label for="VendorName">Experties Level:</label>
                </td>
                <td>
                    <div class="">

                        @Html.DropDownListFor(model => model.Exp_Level, new List<SelectListItem>
                       {
                              new SelectListItem() {Text = "One", Value="1"},
                             new SelectListItem() {Text = "Two", Value="2"},
                             new SelectListItem() {Text = "Three", Value="3"},
                             new SelectListItem() {Text = "Four", Value="4"},
                             new SelectListItem() {Text = "Five", Value="5"},
                             new SelectListItem() {Text = "Six", Value="6"},
                             new SelectListItem() {Text = "Seven", Value="7"},
                             new SelectListItem() {Text = "Eight", Value="8"},
                             new SelectListItem() {Text = "Nine", Value="9"},
                             new SelectListItem() {Text = "Ten", Value="10"},
                       }, "Select Expirience", new { @class = "text-danger form-control", style = "width: 150px;", id = "Exp_Level" })

                        @Html.ValidationMessageFor(model => model.ExpInYears, "", new { @class = "text-danger", style = "width: 1000px;" })
                    </div>

                </td>
            </tr>
            <tr>
              
                <td>
                    <div class="btn" aria-label="...">
                        <button type="submit" class="btn-xs btn-info glyphicon glyphicon-save save" onclick="ValidateForm()"> Save</button>
                    </div>
                </td>
              
            </tr>
            </table>
        </body>
        </html>
    
            
}
