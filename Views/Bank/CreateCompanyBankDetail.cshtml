        {
            <tr style="width:400px">
                <td>
                    <label for="ItemName">Created By:</label>
                </td>
                <td>
                    <div class="navbar-text">
                        @Html.TextBoxFor(model => model.CreatedBy, new { required = "required", @readonly = "readonly", @class = "form-control" })
